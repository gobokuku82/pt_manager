# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Kakao API Configuration
# 카카오 개발자센터(https://developers.kakao.com)에서 앱 생성 후 발급
KAKAO_REST_API_KEY=your_rest_api_key_here  # REST API 호출용 (서버사이드)
KAKAO_JAVASCRIPT_KEY=your_javascript_key_here  # JavaScript 키 (웹 프론트엔드용)
KAKAO_ADMIN_KEY=your_admin_key_here  # Admin 키 (관리자 기능용)
KAKAO_REDIRECT_URI=http://localhost:8501/auth/kakao/callback  # OAuth 인증 후 리다이렉트 URI
KAKAO_CHANNEL_ID=your_channel_id_here  # 카카오톡 채널 ID (_xxxxx 형식)

# Database Configuration
DATABASE_URL=sqlite:///database/pt_shop.db

# Application Configuration
APP_NAME=PT Shop Management System
APP_VERSION=1.0.0
DEBUG_MODE=False

# Session Configuration
SESSION_SECRET_KEY=your_secret_key_here