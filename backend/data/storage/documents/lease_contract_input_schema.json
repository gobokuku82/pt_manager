    },

    "예시3_최소필수만": {
      "address_road": "부산광역시 해운대구 해운대로 100",
      "deposit": "300,000,000",
      "start_date": "2024년 6월 1일",
      "end_date": "2026년 5월 31일",
      "lessor_name": "최지훈",
      "lessee_name": "정수연"
    }
  },

  "필드_설명_한글": {
    "필수_필드": {
      "address_road": "도로명 주소 (지번주소 불가)",
      "deposit": "보증금 금액 (숫자로, 콤마 구분 가능)",
      "start_date": "임대차 시작일 (예: 2024년 1월 1일)",
      "end_date": "임대차 종료일 (예: 2026년 1월 1일)",
      "lessor_name": "임대인(집주인) 이름",
      "lessee_name": "임차인(세입자) 이름"
    },

    "선택_필드": {
      "address_detail": "아파트/오피스텔 동/층/호수",
      "land_area": "토지 면적 (제곱미터, 숫자만)",
      "building_area": "건물 면적 (제곱미터, 숫자만)",
      "rental_area": "실제 임차하는 면적 (제곱미터)",
      "deposit_hangeul": "보증금을 한글로 (예: 오억, 삼억오천만)",
      "contract_payment": "계약금 (계약 시 지불)",
