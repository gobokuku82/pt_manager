{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "주택임대차 표준계약서 입력 데이터",
  "description": "주택임대차 표준계약서 생성을 위한 입력 필드 스키마",
  "type": "object",

  "required": [
    "address_road",
    "deposit",
    "start_date",
    "end_date",
    "lessor_name",
    "lessee_name"
  ],

  "properties": {
    "물건_정보": {
      "type": "object",
      "properties": {
        "address_road": {
          "type": "string",
          "description": "도로명주소",
          "example": "서울특별시 강남구 테헤란로 123"
        },
        "address_detail": {
          "type": "string",
          "description": "상세주소 (동/층/호)",
          "example": "456호 (101동 10층)"
        },
        "land_area": {
          "type": "string",
          "description": "토지 면적 (㎡)",
          "example": "150"
        },
        "building_area": {
          "type": "string",
          "description": "건물 면적 (㎡)",
          "example": "85"
        },
        "rental_area": {
          "type": "string",
          "description": "임차 면적 (㎡)",
          "example": "85"
        }
      }
    },

    "금액_정보": {
      "type": "object",
      "properties": {
        "deposit": {
          "type": "string",
          "description": "보증금 (숫자)",
          "example": "500,000,000"
        },
        "deposit_hangeul": {
          "type": "string",
          "description": "보증금 (한글)",
          "example": "오억"
        },
        "contract_payment": {
          "type": "string",
          "description": "계약금",
          "example": "50,000,000"
        },
        "monthly_rent": {
          "type": "string",
          "description": "월세",
          "example": "2,000,000"
        },
        "monthly_rent_day": {
          "type": "string",
          "description": "월세 납부일 (매월 N일)",
          "example": "1"
        },
        "management_fee": {
          "type": "string",
          "description": "관리비",
          "example": "150,000"
        }
      }
    },

    "기간_정보": {
      "type": "object",
      "properties": {
        "start_date": {
          "type": "string",
          "description": "계약 시작일",
          "example": "2024년 1월 1일"
        },
        "end_date": {
          "type": "string",
          "description": "계약 종료일",
          "example": "2026년 1월 1일"
        }
      }
    },

    "임대인_정보": {
      "type": "object",
      "properties": {
        "lessor_name": {
          "type": "string",
          "description": "임대인 성명",
          "example": "홍길동"
        },
        "lessor_address": {
          "type": "string",
          "description": "임대인 주소",
          "example": "서울특별시 서초구 반포대로 100"
        },
        "lessor_phone": {
          "type": "string",
          "description": "임대인 전화번호",
          "example": "010-1234-5678"
        }
      }
    },

    "임차인_정보": {
      "type": "object",
      "properties": {
        "lessee_name": {
          "type": "string",
          "description": "임차인 성명",
          "example": "김철수"
        },
        "lessee_address": {
          "type": "string",
          "description": "임차인 주소",
          "example": "서울특별시 강남구 테헤란로 123, 456호"
        },
        "lessee_phone": {
          "type": "string",
          "description": "임차인 전화번호",
          "example": "010-9876-5432"
        }
      }
    },

    "특약사항": {
      "type": "object",
      "properties": {
        "special_terms": {
          "type": "string",
          "description": "특약사항 (자유 기재)",
          "example": "반려동물 사육 가능. 소음 발생 시간 제한 (22:00-08:00)"
        }
      }
    }
  },

  "샘플_데이터_예시": {
    "설명": "아래는 실제 사용 가능한 샘플 데이터입니다",

    "예시1_전세": {
      "address_road": "서울특별시 강남구 테헤란로 123",
